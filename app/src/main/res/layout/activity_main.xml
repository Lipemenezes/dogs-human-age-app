<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.felipe.appusingimage.MainActivity"
    android:background="#31bac4"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/png_dog"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_edit_age"
        android:textSize="15sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20px"
        android:textAlignment="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:inputType="number"
            android:layout_centerInParent="true"
            android:background="#FFF"
            android:id="@+id/editAge"
            android:paddingVertical="10dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/label_btn_calculate"
            android:background="#FFF"
            android:paddingHorizontal="10dp"
            android:onClick="calculateAge"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textResponse"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            />

    </RelativeLayout>


</LinearLayout>
